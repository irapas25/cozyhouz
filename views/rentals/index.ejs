<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Rentals</h1>

    <% for (let rental of rentals){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(rental.images.length) {%>
                <img class="img-fluid" alt="" src="<%=rental.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dc7rrfgl8/image/upload/v1680463302/Cozyhouz/jvnscisfu1zv7yvixdle.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= rental.title %> </h5>

                    <p class="card-text"><%= rental.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= rental.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/rentals/<%=rental._id%>">View <%=rental.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const rentals = { features: <%- JSON.stringify(rentals) %>}
</script>


<script src="/javascripts/clusterMap.js"></script>